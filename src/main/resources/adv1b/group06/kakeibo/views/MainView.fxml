<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            fx:controller="adv1b.group06.kakeibo.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="収入記録" onAction="#onIncomeRecordButtonPressed"/>
                <Menu mnemonicParsing="false" text="品目追加" onAction="#onItemAddButtonPressed"/>
                <Menu mnemonicParsing="false" text="編集" onAction="#onEditButtonPressed"/>
                <Menu mnemonicParsing="false" text="エクスポート" onAction="#onExportButtonPressed"/>
                <Menu mnemonicParsing="false" text="設定" onAction="#onSettingButtonPressed"/>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox prefHeight="375.0" prefWidth="260.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" text="&lt;" onAction="#onPrevMonthButtonPressed"/>
                        <Label prefHeight="24.0" prefWidth="60.0" text="2023年 5月"/>
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="&gt;"
                                onAction="#onNextMonthButtonPressed"/>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <TableView prefHeight="100.0" prefWidth="200.0" fx:id="table">
                                    <columns>
                                        <TableColumn editable="false" prefWidth="75.0" text="品目名"
                                                     fx:id="nameColumn"/>
                                        <TableColumn editable="false" prefWidth="75.0" text="カテゴリ"
                                                     fx:id="categoryColumn"/>
                                        <TableColumn editable="false" prefWidth="75.0" text="価格" fx:id="priceColumn"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                        <PieChart prefHeight="150.0" prefWidth="150.0" fx:id="pieChart"/>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
